doctype html
html
  head
    title Boxing Odds
    link(rel='stylesheet', href='stylesheets/bootstrap.min.css')
  body
    .container
      header.jumbotron.my-4
        h1.display-3 Boxing Odds and Statistics Page
        p.lead Below are the list of upcoming boxing matches. Each table contains the fighters, odds and statistics of each match along with links to each boxer's information
      .row.text-center
        each event, index in events
          .col-lg.col-lg-12.mb-4
            .card-body
              h2.card #{events[index][0]} vs #{events[index][1]} Fight Date: #{events[index][2]}
                table.table-bordered
                  thead
                    tr(style='width:100%', border='1')
                      th.cardtext Site
                      th.cardtext #{events[index][0]}
                      th.cardtext #{events[index][1]}
                      th.cardtext Draw
                  tbody
                    tr
                      th.cardtext BetFair odds
                      td.cardtext #{events[index][3][1]}
                      td.cardtext #{events[index][3][2]}
                      td.cardtext #{events[index][3]['X']}
                    tr
                      th.cardtext BetFred odds
                      td.cardtext #{events[index][4][1]}
                      td.cardtext #{events[index][4][2]}
                      td.cardtext #{events[index][4]['X']}
                    tr
                      th.cardtext Betway odds
                      td.cardtext #{events[index][5][1]}
                      td.cardtext #{events[index][5][2]}
                      td.cardtext #{events[index][5]['X']}
                    tr
                      th.cardtext Coolbet odds
                      td.cardtext #{events[index][6][1]}
                      td.cardtext #{events[index][6][2]}
                      td.cardtext #{events[index][6]['X']}
                    tr
                      th.cardtext ComeOn odds
                      td.cardtext #{events[index][7][1]}
                      td.cardtext #{events[index][7][2]}
                      td.cardtext #{events[index][7]['X']}
                    tr
                      th.cardtext Marathon bet odds
                      td.cardtext #{events[index][8][1]}
                      td.cardtext #{events[index][8][2]}
                      td.cardtext #{events[index][8]['X']}
            a(class='btn btn-primary btn-lg btn-block', href=`/info?boxer=${events[index][0]}&date=${events[index][9]}`) Click for #{events[index][0]} Statistics 
            a(class='btn btn-primary btn-lg btn-block', href=`/info?boxer=${events[index][1]}&date=${events[index][9]}`) Click for #{events[index][1]} Statistics  